{
  "name": "mockapiserver",
  "private": true,
  "version": "2.0.0",
  "description": "A quick and simple yet highly customisable mocking server for APIs",
  "author": "Richard Scoones <richard.scoones@gmail.com>",
  "main": "./server",
  "scripts": {
    "start": "node node_modules/gulp/bin/gulp.js --gulpfile example/gulpfile.js",
    "build-ui": "esbuild ./src/client/index.tsx --bundle --minify --sourcemap  --outfile=build/ui.js",
    "watch-ui": "yarn workspace @mockapiserver/client watch"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:rscoones/MockServer.git"
  },
  "devDependencies": {
    "typescript": "5.3.3",

    "esbuild": "0.19.11",
    "prettier": "3.2.4"
  },
  "license": "MIT",
  "dependencies": {
  },
  "workspaces": [
    "packages/*"
  ]
}
